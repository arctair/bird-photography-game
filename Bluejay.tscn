script/source = "extends Sprite


var nextPosition : Vector2
var speed = 300

func _ready():
	position = randomPosition(self)
	nextPosition = position
	flip_h = randf() > 0.5

func _process(delta):
	var nextMovement = (nextPosition - position).normalized() * delta * speed
	if (nextPosition - position).length() <= nextMovement.length():
		nextPosition = randomPosition(self)
	else:
		position += nextMovement

func randomPosition(sprite):
	var viewportSize = get_viewport().size
	var spriteSize = sprite.texture.get_size() * sprite.scale / 2
	return Vector2(
		rand_range(spriteSize.x, viewportSize.x - spriteSize.x),
		rand_range(spriteSize.y, viewportSize.y - spriteSize.y)
	)
